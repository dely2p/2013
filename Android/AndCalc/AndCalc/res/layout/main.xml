<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0e0e0"
    >
    <LinearLayout android:id="@+id/TopLayout" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
        <TextView android:text="Simple Android Calculator" 
    		android:id="@+id/TextView01" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:textSize="20sp"
    		android:textColor="#606060"
    		android:layout_weight="1"
    		android:gravity="center"
    		android:layout_marginTop="5dp"></TextView>	
    	<EditText android:text="" 
	    	android:id="@+id/EditText01" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_weight="2"
    		android:layout_marginTop="20dp"
    		
    		android:gravity="right"
    		android:textSize="30sp"></EditText>
	</LinearLayout>    		
   	<LinearLayout android:id="@+id/MiddleLayout" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal">
			
    	<TextView android:text="" 
    		android:id="@+id/M1" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:gravity="left"
    		android:layout_weight="1"
    		android:textSize="20sp"
    		android:textColor="#606060"
    		android:layout_marginLeft="10dp"></TextView>
    	<TextView android:text="" 
    		android:id="@+id/OP" 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content"
    		android:gravity="right"
    		android:layout_weight="1"
    		android:textSize="20sp"
    		android:textColor="#606060"
    		android:layout_marginRight="10dp"></TextView>
   	</LinearLayout>
	
    <LinearLayout android:id="@+id/ButtonLayout" 
    	android:layout_width="fill_parent" 
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:layout_weight="2"
    	android:layout_marginTop="10dp">
    	<LinearLayout android:id="@+id/ButtonLine01" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal">
    	<Button android:text="C" 
    		android:id="@+id/BtnClear" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="←" 
    		android:id="@+id/BtnDel" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="  = " 
    		android:id="@+id/BtnResult" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="2"
    		android:textSize="25sp"></Button>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/ButtonLine02" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal">	
    	<Button android:text="1" 
    		android:id="@+id/Btn01" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"	
    		android:textSize="25sp"></Button>
    	<Button android:text="2" 
    		android:id="@+id/Btn02" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"	
    		android:textSize="25sp"></Button>
    	<Button android:text="3" 
    		android:id="@+id/Btn03" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    		<Button android:text="÷" 
    		android:id="@+id/BtnDiv" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/ButtonLine03" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal">
    	<Button android:text="4" 
    		android:id="@+id/Btn04" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="5" 
    		android:id="@+id/Btn05" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="6" 
    		android:id="@+id/Btn06" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="×" 
    		android:id="@+id/BtnMul" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	</LinearLayout>
		<LinearLayout android:id="@+id/ButtonLine04" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal">
    	<Button android:text="7" 
    		android:id="@+id/Btn07" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="8" 
    		android:id="@+id/Btn08" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="9" 
    		android:id="@+id/Btn09" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="+" 
    		android:id="@+id/BtnPlus" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	</LinearLayout>
    	<LinearLayout android:id="@+id/ButtonLine05" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="horizontal">
    	<Button android:text="  0 " 
    		android:id="@+id/Btn00" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="2"
    		android:textSize="25sp"></Button>
    	<Button android:text="." 
    		android:id="@+id/BtnPoint" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	<Button android:text="-" 
    		android:id="@+id/BtnMinus" 
    		android:layout_width="wrap_content" 
    		android:layout_height="fill_parent"
    		android:layout_weight="1"
    		android:textSize="25sp"></Button>
    	</LinearLayout>
	</LinearLayout>
	<LinearLayout android:id="@+id/NameLayout"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal">
    	<TextView android:text="made by TiredJK" 
    		android:id="@+id/NameSpace" 
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:textSize="14sp"
    		android:textColor="#807070"
    		android:layout_weight="1"
    		android:gravity="right"></TextView>
</LinearLayout>
</LinearLayout>
